<mvc:View
  height="100%"
  controllerName="MSA.view.Menu"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page
    showHeader="false"
    enableScrolling="false" >
    <TileContainer
      id="container">
      <StandardTile
        icon="sap-icon://documents"
        type="Monitor"
        title="Manage Tickets"
        press="onManageTickets"/>
      <StandardTile
        icon="sap-icon://group"
        type="Monitor"
        title="Manage Technicians"
        press="onManageTechnicians"/>
      <StandardTile
        icon="sap-icon://bar-chart"
        type="Monitor"
        title="Reports"
        press="onShowReports"/>
    </TileContainer>
  </Page>
</mvc:View>