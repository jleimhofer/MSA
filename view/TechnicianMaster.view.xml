<mvc:View
	controllerName="MSA.view.TechnicianMaster"
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="page"
		title="Technicians">
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField
						id="searchField"
						showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>masterSearchPlaceholder}"
						liveChange="onLiveChange"
						tooltip="{i18n>masterSearchTooltip}"
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List
				id="techList"
				items="{/TechnicianViewSet}"
				mode="{device>/listMode}"
				noDataText="{i18n>masterListNoDataText}"
				select="onSelect"
				growing="true"
				growingScrollToLoad="true">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						press="onSelect"
						intro="# Assigned Tickets: {NumAssigned}"
						title="{Firstname} {Lastname}" 
						number="#{TechnicianId}" 
						numberUnit="{TypeName}">
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
			    <Bar design="Footer">
			        <contentMiddle>
			            <Button id="btnMenu" text="Menu" press="onOpenMenu"/>
			         </contentMiddle>
			    </Bar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>